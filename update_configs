# Define green color for success messages
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Loop through all config* files
for file in /root/ceremonyclient/node/.config/config*; do
    echo "ğŸ› ï¸ Processing $file"

    echo "ğŸ—‘ï¸ Deleting the old 'dataWorkerMultiaddrs' block in $file..."
    sed -i '/dataWorkerMultiaddrs:/,/]/d' "$file" && echo "âœ… Old block deleted in $file." || echo "âŒ Failed to delete in $file!"

    echo "ğŸ“‚ Verifying if 'dataw' exists..."
    if [ -f /root/dataw ]; then
        echo "âœ… 'dataw' found."
    else
        echo "âŒ 'dataw' not found at /root/dataw. Exiting."
        exit 1
    fi

    echo "ğŸ“„ Content of 'dataw' to be inserted into $file:"
    cat /root/dataw || echo "âŒ Failed to read 'dataw'!"

    echo "ğŸ“ Inserting 'dataw' content after 'engine:' in $file..."
    sed -i "/engine:/r /root/dataw" "$file" && echo "âœ… Insertion complete in $file." || echo "âŒ Failed to insert into $file!"

    echo "ğŸ” Verifying the new 'dataWorkerMultiaddrs' block in $file..."
    if grep -A 20 "dataWorkerMultiaddrs" "$file" > /dev/null; then
        echo -e "${GREEN}ğŸŸ¢ SUCCESS: '$file' updated successfully.${NC}"
    else
        echo "âŒ 'dataWorkerMultiaddrs' not found in $file!"
    fi

    echo "-----------------------------------------"
done
